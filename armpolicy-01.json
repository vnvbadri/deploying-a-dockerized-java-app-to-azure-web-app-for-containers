{
    "if": {
       "anyOf": [
        {
           "not": {
             "anyOf": [
                   {
                   "field": "type",
                   "like": "Microsoft.ContainerRegistry/registries/*"
                   },
                   {
                   "field": "type",
                   "like": "Microsoft.DBforMySQL/servers/*"
                   },
                   {
                   "field": "type",
                   "like": "microsoft.insights/alertrules/*"
                   },
                   {
                   "field": "type",
                   "like": "microsoft.insights/components/*"
                   },
                   {
                    "field": "type",
                    "like": "Microsoft.Authorization/roleAssignments"
                   },    
                   {
                    "field": "type",
                    "like": "Microsoft.Resources/deployments"
                   },                                  
                   {
                   "field": "type",
                   "like": "Microsoft.Web/serverFarms/*"
                   },
                   {
                   "field": "type",
                   "like": "Microsoft.Web/sites/*"
                   },
                   {
                   "field": "type",
                   "in": ["Microsoft.ContainerRegistry/registries", "Microsoft.Resources/deployments", "Microsoft.Authorization/roleAssignments", "Microsoft.DBforMySQL/servers", "microsoft.insights/alertrules", "microsoft.insights/components", "Microsoft.Web/serverFarms", "Microsoft.Web/sites"]
                   }
               ]
           }
        },
         {
         "allof": [
           {
             "field": "type",
             "equals": "Microsoft.ContainerRegistry/registries"
           },
           {
           "field": "Microsoft.ContainerRegistry/registries/sku.name",
           "notIn": ["Standard"]
           }
           ]
         },
         {
         "allof": [
           {
             "field": "type",
             "equals": "Microsoft.Web/serverfarms"
           },
           {
             "not": {
               "field": "Microsoft.Web/serverfarms/sku.name",
               "in": ["P1v2"]
               }
             }
           ]
         }

     ]
   },
   "then": {
     "effect": "deny"
   }
}
